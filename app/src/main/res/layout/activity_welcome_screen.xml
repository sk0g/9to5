<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/CustomColourScheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="60dp"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/logo1"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:scrollbars="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fadeScrollbars="false">

            <TextView
                android:id="@+id/main_screen_long_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_vertical"
                android:text="@string/welcome_page_middle_text"
                android:lineSpacingMultiplier="1.25"/>

        </ScrollView>

        <Button
            android:id="@+id/start_quiz_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:minWidth="120dp"
            android:background="@drawable/drawable_high_emphasis"
            android:text="@string/start_button_label"
            android:textColor="@color/colorBackground"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>